<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/custom_view_book_background"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:scaleType="fitXY"
        android:src="@drawable/custom_view_background" />

    <LinearLayout
        android:id="@+id/custom_view_information_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:paddingRight="30dp" >

        <LinearLayout
            android:id="@+id/custom_view_book_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/custom_view_book_cover"
                android:layout_width="100dip"
                android:layout_height="120dip"
                android:layout_marginRight="10dp"
                android:scaleType="fitCenter" />

            <LinearLayout
                android:id="@+id/custom_view_book_text_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/custom_view_titel"
                    android:layout_width="150dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginRight="10dp"
                    android:maxLines="2"
                    android:textColor="@color/white"
                    android:textSize="@dimen/overlay_title"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/custom_view_merk"
                    android:layout_width="150dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="5dp"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/overlay_author" />

                <TextView android:id="@+id/custom_view_inhoud" android:layout_width="150dip"
                          android:layout_height="wrap_content" android:layout_gravity="left"
                          android:layout_marginTop="5dp" android:singleLine="true" android:textColor="@color/white"
                          android:textSize="@dimen/overlay_author"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>